root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.c]
indent_style = tab
indent_size = tab

[*.py]
indent_style = space
indent_size = 4

[*.zig]
indent_style = space
indent_size = 4

[*.rs]
indent_style = space
indent_size = 4

[*.go]
indent_style = space
indent_size = 4
